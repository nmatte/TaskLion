<form action="<%= users_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<div class="signup-container">
  <label>
    First Name
    <input class="input" type="text" name="user[fname]">
  </label>

  <label>
    Last Name
    <input class="input" type="text" name="user[lname]">
  </label>

  <label>
    Email
    <input class="input" type="text" name="user[email]">
  </label>

  <label>
    Password
    <input class="input" type="password" name="user[password]">
  </label>
    <input class="blue-button" type="submit" value="Sign up">

    <p>(demo user: 'demo@tasklion.tech', password: 'demo_password')</p>
    <p>(interactive demo user login incoming)</p>
  </div>

  <div id="login"/>
</form>
<%= button_to "demo user", demo_session_url %>
